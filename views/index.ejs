<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful writeup App</div>
    <div class="ui top attached segment">
        <div class="ui divided items"> 
            <% writeups.forEach(function(writeup){ %>
                <div class="item">
                        <div class="image">
                            <img src = "<%=writeup.image%>">
                        </div>
                        
                        <div class="content">
                            <a class="header" href="/writeups/<%= writeup._id %>"> <%=writeup.title%> </a>
                     
                        <div class="meta">
                             <span><%= writeup.created.toDateString() %></span>
                        </div>
                        
                        
                         <div class="description">
                             <p><%- writeup.body.substring(0,100) %>....</p>
                         </div>
                          
                         <div>
                             <a class="ui floated basic violet button" href="/writeups/<%= writeup._id %>"> 
                             Read More
                              <i class="right chevron icon"></i>
                             </a>
                         </div>    
                         </div>
               </div>
                 <%  }) %> 
        </div>
    </div>
</div>
     


<% include partials/footer %>