<% include partials/header %>
<div class="container">
       <div class="row">
            <h1 style="text-align: center">Add new comment to <%= writeup.name %></h1>  <!--yaha writeup ni aa raha--> 
            <div style="width: 30%; margin: 25px auto;">
                <form action="/writeups/<%= writeup._id %>/comments" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="comment[text]" placeholder="text">
                    </div>
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="author">
                    </div>
                
                     <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>  
                <a href="/writeups">Go back</a>
            </div>    
            
      </div>
</div>
<% include partials/footer %> 